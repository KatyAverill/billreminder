<!DOCTYPE html>
<html>
<head>
  <title>Reminders</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar">
		<div class="navbar-fixed-top navbar-inverse">
			<div class="navbar-inner">
				<div class="container">
					<a href="#" class="brand">Reminders</a>
					<ul class="nav pull-right">
						<% if user_signed_in? %>
							<li><%= link_to "All Reminders", reminders_path %></li>
							<li><%= link_to "New Reminder", new_reminder_path %></li>
							<li><%= link_to current_user.full_name, edit_user_registration_path %></li>
							<li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
						<% else %>
							<li><%= link_to "Register", new_user_registration_path %></li>
							<li><%= link_to "Log in", new_user_session_path %></li>
						<% end %>
					</ul>
				</div>
			</div>
		</div>
	</div>
	<div class="container">
		<p class="notice"><%= notice %></p>
    	<p class="alert"><%= alert %></p>

		<%= yield %>
	</div>
</body>
</html>
