<div class="row">
	<div class="span5">

		<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html =>{ class: "well"}) do |f| %>
		  <%= devise_error_messages! %>

		  <fieldset>
		  	<legend>Sign up</legend>

			  <%= f.input :first_name %><br />

			  <%= f.input :last_name %><br />

			  <%= f.input :profile_name, label: 'User name' %><br />

			  <%= f.input :email %><br />

			  <%= f.input :password %><br />

			  <%= f.input :password_confirmation %><br />

			  <div><%= f.button :submit, "Sign up" %></div>

		  </fieldset>
		<% end %>

		<%= render "devise/shared/links" %>
	</div>

	<div class="span7">
		<h2>Signing up happens here! Yippeeee!</h2>
	</div>

</div>
